       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
       
<tiles-definitions>
					<!-- 메인 화면 뷰이름 -->		<!-- 기본 레이아웃은 baseLayout을 상속받음 -->
		<definition name="/board/listArticles" extends="baseLayout">
			<put-attribute name="title" value="글목록"/>
			<put-attribute name="body" value="/WEB-INF/views/board/listArticles.jsp"/>	<!-- 레이아웃에서 본문 표시할 JSP 위치 -->
		</definition>
		
		<definition name="/board/articleForm" extends="baseLayout">
			<put-attribute name="title" value="글쓰기"/>
			<put-attribute name="body" value="/WEB-INF/views/board/articleForm.jsp"/>	<!-- /board/articleForm 요청에 대한 글쓰기창 -->
		</definition>
		
		<definition name="/board/viewArticle" extends="baseLayout">
			<put-attribute name="title" value="글상세보기"/>
			<put-attribute name="body" value="/WEB-INF/views/board/viewArticle.jsp"/>	<!-- /board/viewArticle 요청에 대한 글상세보기창 -->
		</definition>
</tiles-definitions>       
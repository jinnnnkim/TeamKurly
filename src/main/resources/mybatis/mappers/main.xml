			(select rownum as rn, tp.* FROM tb_prod tp) tp
  			where rn between #{rowStart} and #{rowEnd} 
    	]]>
	</select> -->

	
	<select id="listGoods" resultMap="mainResult">
		<![CDATA[
			select * from 
			(select rownum as rn, prod_name, prod_price, prod_code
			from tb_prod
			where
		]]>
		<![CDATA[	
			rownum <= #{page} * #{pageSize}
			)
	 		where rn between #{rowStart} and #{rowEnd} 
	   	]]>
	</select>

	<select id="cateCount" resultType="int" >
			select count(*) from TB_prod
	</select>
</mapper>
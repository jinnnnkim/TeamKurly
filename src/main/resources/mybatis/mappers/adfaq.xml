<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.adfaq">	<!-- user.xml의 네임스페이스 지정 -->

	<!-- 발송 -->
	<resultMap type="adFAQVO" id="FAQResult">		
		<result property="faq_code" column="faq_code" />
		<result property="faq_info" column="faq_info"/>
		<result property="faq_confirm" column="faq_confirm"/>
		<result property="faq_reg_date" column="faq_reg_date"/>
	</resultMap>
	
	
	<!-- 페이지정보를 10개씩 가져오기 -->
	<select id="FAQListPage" resultMap="FAQResult">
		<![CDATA[
			select * 
			from tb_faq
			where rownum #{page} <= 10
		]]>
	</select> 

	<!-- 페이지정보를 지정한 크기만큼 가져오기 -->
	<select id="FAQListPaging" resultMap="FAQResult">
		<![CDATA[
			select * from (select rownum AS rn, tb_faq.* from tb_faq)  where rn between #{rowStart} and #{rowEnd}
		]]>
	</select>
	
	<!-- 총 FAQ 수 -->
	<select id="FAQListCount" resultType="int">
		<![CDATA[
			select count(*) from TB_faq
		]]>
	</select>
	
	<!-- FAQ 정보 삭제  -->
	<delete id="deleteFAQ" parameterType="String">
		<![CDATA[
			delete from tb_faq
			where faq_code = #{id}
		]]>
	</delete>
	
	<!-- FAQ 상세 정보 조회 -->
	<select id="readFAQ" resultMap="FAQResult" parameterType="String">
		<![CDATA[
			select *
			from tb_faq
			where faq_code = #{id}
		]]>
	</select>
	
	<!-- FAQ 정보 수정 -->
	<update id="updateFAQ" parameterType="adFAQVO">
		<![CDATA[
			update tb_faq set
			faq_code = #{faq_code},			
			faq_info = #{faq_info}, 
			faq_confirm = #{faq_confirm},
			faq_reg_date = #{faq_reg_date} 
			where faq_code = #{faq_code}
		]]>
	</update>

</mapper>	